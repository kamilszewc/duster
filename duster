#!/bin/bash

if [ $# == 0 ]
then
    # Go to the directory of this script
    cd `dirname $0`

    # Launch sampler
    cd sampler;
    python3 sampler.py &
    SAMPLER=$!

    # Launch dusterapp
    cd ../dusterapp
    ./gradlew bootRun &
    WEBAPP=$!

    # Wait for any of the proceses to end/fail
    wait -n $SAMPLER $WEBAPP

    # Kill both processes
    kill -9 $SAMPLER && kill -9 $WEBAPP
else
    echo "Usage: ./duster"
fi

